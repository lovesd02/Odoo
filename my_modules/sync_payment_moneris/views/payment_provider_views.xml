<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Moneris Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'moneris'" name="moneris_credentials">
                    <field name="store_id" required="code == 'moneris' and state != 'disabled'"/>
                    <field name="api_token" required="code == 'moneris' and state != 'disabled'" password="True"/>
                    <field name="checkout_id" required="code == 'moneris' and state != 'disabled'" password="True"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
