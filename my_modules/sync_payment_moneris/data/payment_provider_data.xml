<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_moneris" model="payment.method">
        <field name="name">Moneris</field>
        <field name="code">moneris</field>
        <field name="sequence">1000</field>
        <field name="active">True</field>
        <field name="image" type="base64" file="payment/static/img/card.png"/>
        <field name="support_tokenization">True</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund"></field>
    </record>

    <record id="payment_provider_moneris" model="payment.provider">
        <field name="name">Moneris Checkout</field>
        <field name="image_128"
               type="base64"
               file="sync_payment_moneris/static/src/img/moneris_icon.png"/>
        <field name="module_id" ref="base.module_sync_payment_moneris"/>
        <field name="code">moneris</field>
        <field name="payment_method_ids"
               eval="[Command.set([ref('sync_payment_moneris.payment_method_moneris')])]"
        />
        <field name="inline_form_view_id" ref="inline_form"/>
    </record>

</odoo>
